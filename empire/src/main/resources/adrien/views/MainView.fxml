<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainPane" fx:controller="adrien.controllers.MainController" xmlns:fx="http://javafx.com/fxml" >

    <!-- Carte en haut à gauche -->
    <left>
        <VBox alignment="TOP_LEFT" >
            <fx:include source="MapView.fxml" fx:id="mapView"/>
        </VBox>
        <HBox alignment="CENTER" >
            <fx:include source="BuildingsView.fxml" fx:id="buildingsView"/>
        </HBox>
    </left>


    <!-- Ressources à droite de la carte -->
    <right>
        <VBox alignment="TOP_RIGHT">
            <fx:include source="ResourcesView.fxml" fx:id="resourcesView"/>
        </VBox>
    </right>

</BorderPane>
