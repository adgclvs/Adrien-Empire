<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<HBox fx:controller="adrien.controllers.ButtonsController" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="BOTTOM_LEFT">
    <!-- StackPane pour superposer le menu personnalisé -->
    <StackPane>
        <!-- Image du menu qui sert de bouton pour ouvrir le menu -->
        <ImageView fx:id="menuImage" onMouseClicked="#toggleMenu" />
    </StackPane>
    
    <!-- HBox pour afficher le customMenu avec les bâtiments, en laissant de l'espace -->
    <HBox fx:id="customMenu" spacing="10" visible="false" style="-fx-background-color: lightgrey; -fx-padding: 10;">
        <!-- Les images des bâtiments seront ajoutées ici dynamiquement -->
    </HBox>
</HBox>
