<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:controller="adrien.controllers.MainController" xmlns:fx="http://javafx.com/fxml">
    <center>
        <HBox>
            <!-- MapView à gauche -->
            <VBox alignment="CENTER">
                <fx:include source="MapView.fxml" fx:id="mapView"/>
            </VBox>

            <!-- Ressources à droite -->
            <VBox alignment="CENTER">
                <fx:include source="ResourcesView.fxml" fx:id="resourcesView"/>
            </VBox>
        </HBox>
    </center>

    <!-- Barre inférieure avec les boutons -->
    <bottom>
        <HBox alignment="CENTER">
            <fx:include source="BuildingsView.fxml" fx:id="buildingsView"/>
        </HBox>
    </bottom>
</BorderPane>